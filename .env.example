# =============================================================
# AIC Platform — Environment Variables
# Copy this file to .env and fill in real values.
# =============================================================

# PostgreSQL Database
POSTGRES_USER=aic_admin
POSTGRES_PASSWORD=CHANGE_ME_TO_A_STRONG_PASSWORD
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=aic_platform
POSTGRES_URL=postgresql://aic_admin:CHANGE_ME@localhost:5432/aic_platform

# NextAuth (shared across all Next.js apps)
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=CHANGE_ME_GENERATE_A_RANDOM_SECRET

# Per-app NextAuth URLs (must match the port each app runs on)
# Web:      http://localhost:3000
# Platform: http://localhost:3001
# Admin:    http://localhost:3002
# HQ:       http://localhost:3004
NEXTAUTH_URL=http://localhost:3001

# Engine (Python audit microservice)
ENGINE_URL=http://localhost:8000
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
# In dev mode, the engine auto-generates a key if this is not set.
ENGINE_API_KEY=

# Cryptographic Signing Keys (optional — auto-generated in dev)
# In production, generate with: openssl genpkey -algorithm RSA -pkeyopt rsa_keygen_bits:3072
# AUDIT_SIGNING_KEY=<PEM-encoded private key>
# AUDIT_VERIFY_KEY=<PEM-encoded public key>

# Google Analytics (optional, web app only)
NEXT_PUBLIC_GA_ID=
