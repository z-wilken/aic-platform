{
  "name": "aic-platform-monorepo",
  "version": "1.0.0",
  "private": true,
  "packageManager": "npm@11.6.2",
  "workspaces": [
    "apps/*",
    "apps/internal",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "test": "turbo test",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:engine": "cd apps/engine && pytest tests/ -v --tb=short",
    "test:e2e": "npx playwright test",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^10.0.1",
    "@playwright/test": "^1.58.2",
    "@testing-library/jest-dom": "^6.4.0",
    "@testing-library/react": "^14.2.0",
    "@types/bcrypt": "^6.0.0",
    "@types/pg": "^8.16.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/coverage-v8": "^1.3.0",
    "concurrently": "^8.2.0",
    "husky": "^9.1.7",
    "jsdom": "^24.0.0",
    "lint-staged": "^16.2.7",
    "turbo": "^2.8.7",
    "vitest": "^1.3.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "vitest related --run"
    ]
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "dotenv": "^17.3.1",
    "drizzle-orm": "^0.45.1",
    "next": "15.1.7",
    "next-auth": "^4.24.13",
    "pg": "^8.18.0",
    "react": "19.0.0",
    "react-dom": "19.0.0"
  }
}
